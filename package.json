{
  "name": "orka-vs",
  "displayName": "Orka - Master/Slave AI Orchestration",
  "description": "Native VS Code extension for orchestrating multiple AI CLI agents with master/slave architecture",
  "version": "0.1.0",
  "publisher": "BTankut",
  "engines": {
    "vscode": "^1.105.0"
  },
  "extensionKind": ["workspace", "ui"],
  "categories": [
    "AI",
    "Chat",
    "Other"
  ],
  "keywords": [
    "claude",
    "codex",
    "gemini",
    "ai",
    "orchestration",
    "telegram"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "orka.master",
        "name": "orka",
        "fullName": "Orka",
        "description": "Master AI orchestrator for multi-agent coordination",
        "isSticky": true,
        "commands": [
          {
            "name": "add-dir",
            "description": "Add additional working directories"
          },
          {
            "name": "agents",
            "description": "Manage custom AI subagents for specialized tasks"
          },
          {
            "name": "bug",
            "description": "Report bugs (sends conversation to Anthropic)"
          },
          {
            "name": "clear",
            "description": "Clear conversation history"
          },
          {
            "name": "compact",
            "description": "Compact conversation with optional focus instructions"
          },
          {
            "name": "config",
            "description": "Open the Settings interface (Config tab)"
          },
          {
            "name": "cost",
            "description": "Show token usage statistics"
          },
          {
            "name": "doctor",
            "description": "Checks the health of your Claude Code installation"
          },
          {
            "name": "help",
            "description": "Get usage help"
          },
          {
            "name": "init",
            "description": "Initialize project with CLAUDE.md guide"
          },
          {
            "name": "login",
            "description": "Switch Anthropic accounts"
          },
          {
            "name": "logout",
            "description": "Sign out from your Anthropic account"
          },
          {
            "name": "mcp",
            "description": "Manage MCP server connections and OAuth authentication"
          },
          {
            "name": "memory",
            "description": "Edit CLAUDE.md memory files"
          },
          {
            "name": "model",
            "description": "Select or change the AI model"
          },
          {
            "name": "permissions",
            "description": "View or update permissions"
          },
          {
            "name": "pr_comments",
            "description": "View pull request comments"
          },
          {
            "name": "review",
            "description": "Request code review"
          },
          {
            "name": "sandbox",
            "description": "Enable sandboxed bash tool with filesystem and network isolation"
          },
          {
            "name": "rewind",
            "description": "Rewind the conversation and/or code"
          },
          {
            "name": "status",
            "description": "Open the Settings interface (Status tab)"
          },
          {
            "name": "terminal-setup",
            "description": "Install Shift+Enter key binding for newlines"
          },
          {
            "name": "usage",
            "description": "Show plan usage limits and rate limit status"
          },
          {
            "name": "vim",
            "description": "Enter vim mode for alternating insert and command modes"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "orka.openMasterTerminal",
        "title": "Orka: Open Master Terminal"
      },
      {
        "command": "orka.showSlaveStatus",
        "title": "Orka: Show Slave Task Status"
      },
      {
        "command": "orka.abortExecution",
        "title": "Orka: Abort Current Execution"
      }
    ],
    "configuration": {
      "title": "Orka",
      "properties": {
        "orka.master.cli": {
          "type": "string",
          "default": "claude",
          "description": "Executable name or absolute path for the master CLI (defaults to 'claude')."
        },
        "orka.master.model": {
          "type": "string",
          "default": "",
          "description": "Optional model id/alias for the master CLI. Leave empty to use CLI default."
        },
        "orka.master.maxTurns": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Optional limit of agentic turns (--max-turns). 0 means do not pass the flag."
        },
        "orka.slaves.available": {
          "type": "array",
          "default": ["codex", "gemini"],
          "items": {
            "type": "string",
            "enum": ["claude", "codex", "gemini"]
          },
          "description": "Available slave CLI agents"
        },
        "orka.telegram.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Telegram integration"
        },
        "orka.telegram.port": {
          "type": "number",
          "default": 3001,
          "description": "WebSocket port for Telegram bridge"
        },
        "orka.terminal.visible": {
          "type": "boolean",
          "default": true,
          "description": "Show terminal output for master and slaves"
        },
        "orka.chat.showConfigOnStart": {
          "type": "boolean",
          "default": false,
          "description": "Print effective master CLI configuration at the start of each @orka chat request"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.93.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BTankut/orka-vs.git"
  },
  "license": "GPL-3.0"
}
